@model IEnumerable<DbExperiment.Models.ApplicationUser>
@{
    ViewData["Title"] = "ListUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List Users</h1>

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Users List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info">&nbsp; New Account</a>
    </div>
</div>
<br/>
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m=> m.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(m=>m.Email)
            </th>
            <th>
                Disabled
            </th>
            <th></th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => user.UserName)
                </td>
                <td>
                    @Html.DisplayFor(m =>user.Email)
                </td>
                <td>
                    @if (user.LockoutEnd != null && user.LockoutEnd > DateTime.Now)
                    {
                        <lable>Disabled</lable>
                    }
                </td>
                <td>
                    @if (user.LockoutEnd == null && user.LockoutEnd < DateTime.Now)
                    {
                        <a type="button" class="btn btn-primary" href="@Url.Action("Edit/"+user.Id)"></a>
                    }
                </td>
                
            </tr>
        }
    </table>
</div>
